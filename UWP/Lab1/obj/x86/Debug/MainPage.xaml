<Page
    x:Class="Lab1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <TextBox x:ConnectionId='2' x:Name="input1" Width="250" Height="40" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,50,0,0" Text="email" TextWrapping="Wrap"/>
            <TextBox x:ConnectionId='3' x:Name="input2" Width="250" Height="40" RelativePanel.Below="input1" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,50,0,0" Text="content" TextWrapping="Wrap"/>
            <TextBox x:ConnectionId='4' x:Name="input3" Width="250" Height="80" RelativePanel.Below="input2" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="0,50,0,0" Text="title" TextWrapping="Wrap"/>
            <Button x:ConnectionId='5'                      Content="Submit" Width="250px" RelativePanel.Below="input3" RelativePanel.AlignHorizontalCenterWithPanel="True"  Margin="0,50,0,0"/>
            <TextBlock x:ConnectionId='6' Margin="100,50,0,0" x:Name="TxtBlock" RelativePanel.RightOf="input1" Width="300" Height="500"/>
        </RelativePanel>
    </Grid>
</Page>

